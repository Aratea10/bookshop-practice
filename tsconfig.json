{
    "compilerOptions": {
        "target": "ES2022",
        "module": "EsNext",
        "moduleResolution": "Bundler",

        "rootDir": "src",
        "outDir": "dist",

        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
